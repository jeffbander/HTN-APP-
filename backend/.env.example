# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Flask
# IMPORTANT: Set to 'production' for deployment
FLASK_ENV=development

# Secret key for Flask sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=CHANGE-ME-generate-with-secrets-token-hex

# Database
# HIPAA REQUIRED: Use PostgreSQL with SSL in production
# Development: sqlite:///bp_app.db
# Production:  postgresql://user:password@localhost:5432/htn_db?sslmode=require
DATABASE_URL=sqlite:///bp_app.db

# Encryption key for PHI at rest (32 bytes, base64 encoded)
# Generate with: python -c "import secrets, base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
PHI_ENCRYPTION_KEY=CHANGE-ME-generate-with-command-above

# JWT Settings
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=CHANGE-ME-generate-with-secrets-token-hex
# Token expiration in seconds (3600 = 1 hour, HIPAA recommended maximum)
JWT_ACCESS_TOKEN_EXPIRES=3600

# Audit Log
AUDIT_LOG_FILE=logs/audit.log

# SSL Certificates (required in production)
SSL_CERT_PATH=certs/cert.pem
SSL_KEY_PATH=certs/key.pem

# CORS - comma-separated list of allowed origins
# Example: https://myapp.com,https://admin.myapp.com
# Leave empty in development to allow localhost
ALLOWED_ORIGINS=

# Email Backend Configuration
# Options: console (default), smtp, sendgrid
EMAIL_BACKEND=console

# SMTP Settings (when EMAIL_BACKEND=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_USE_TLS=true

# SendGrid Settings (when EMAIL_BACKEND=sendgrid)
SENDGRID_API_KEY=SG.your-api-key
SENDGRID_FROM_EMAIL=noreply@example.com

# Firebase Cloud Messaging (FCM) for Push Notifications
# Path to Firebase service account JSON file
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json
